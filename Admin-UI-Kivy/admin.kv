<BoxLayout>:
    canvas.before:
        BorderImage:
            source: 'static/fitquest_bg.png'  # Replace with your image file
            pos: self.pos
            size: self.size

<Label>:
    font_size: '20sp'
    color: 1, 1, 1, 1  # White color
    font_name: 'fonts/wonderboys.ttf'

<TextInput>:
    font_size: '16sp'
    foreground_color: 1, 1, 1, 1  # White color
    background_color: 0.19, 0, 0.39, 1  # RGB for #310063
    cursor_color: 1, 1, 1, 1  # White color
    font_name: 'fonts/gabarito.ttf'

<Button>:
    font_size: '16sp'
    color: 1, 1, 1, 1  # White color
    background_normal: ''
    background_color: 0, 0, 1, 1  # Blue button
    font_name: 'fonts/gabarito.ttf'
